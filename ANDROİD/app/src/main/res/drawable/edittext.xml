<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#44000000" /> <!-- Gölge için şeffaf siyah renk -->
            <corners android:radius="20dp" /> <!-- Yuvarlatılmış köşeler -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- Gölge etkisi için boşluk -->
        </shape>
    </item>

    <!-- EditText Arka Planı -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- EditText'in arka planı beyaz -->
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" />
        </shape>
    </item>

</layer-list>
